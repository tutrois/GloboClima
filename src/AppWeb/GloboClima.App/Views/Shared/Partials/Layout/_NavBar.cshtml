<nav class="navbar navbar-top navbar-slim justify-content-between fixed-top navbar-expand-lg" id="navbarTopSlim">
    <script>
        var navbarStyle = window.config.config.phoenixNavbarStyle;
        if (navbarStyle && navbarStyle !== 'transparent') {
            document.querySelector('body').classList.add(`navbar-${navbarStyle}`);
        }
    </script>
    <!-- Nav Bar Logo -->
    <div class="navbar-logo">
        <button class="btn navbar-toggler navbar-toggler-humburger-icon hover-bg-transparent" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTopCollapse" aria-controls="navbarTopCollapse" aria-expanded="false" aria-label="Toggle Navigation"><span class="navbar-toggle-icon"><span class="toggle-line"></span></span></button>

        @if (AppUser.EstaAutenticado())
        {
            <a class="navbar-brand navbar-brand" asp-action="Index" asp-controller="HomeDash">Globo <span class="text-body-highlight d-none d-sm-inline">Clima</span></a>
        }
        else
        {
            <a class="navbar-brand navbar-brand" asp-action="Index" asp-controller="Home">Globo <span class="text-body-highlight d-none d-sm-inline">Clima</span></a>
        }
    </div>
    <!-- Nav Bar Header -->
    <div class="collapse navbar-collapse navbar-top-collapse order-1 order-lg-0 justify-content-center" id="navbarTopCollapse">
        <ul class="navbar-nav navbar-nav-top" data-dropdown-on-hover="data-dropdown-on-hover">
            @if (AppUser.EstaAutenticado())
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle lh-1" asp-action="Index" asp-controller="HomeDash"><span class="uil fs-8 me-2" data-feather="home"></span>Inicio</a>
                </li>
            }
            else
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle lh-1" asp-action="Index" asp-controller="Home"><span class="uil fs-8 me-2" data-feather="home"></span>Inicio</a>
                </li>
            }
