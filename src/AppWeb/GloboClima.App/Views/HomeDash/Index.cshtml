@using GloboClima.App.ViewModels
@model HomeDashViewModel

@{
}
<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
<div class="pb-9">
    <h2 class="mb-2">Favoritos</h2>
    <div class="d-xl-flex justify-content-between">
        <div class="mb-3">
            <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#tooltipModal"><span class="fas fa-plus me-2"></span> Adicionar nova cidade</button>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-xxl-12 mb-1">
            <div class="tabs mb-7">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-month" role="tabpanel" aria-labelledby="pills-month-tab">
                        <div class="row g-3">
                            <div class="col-12 col-md-4 col-lg-12 col-xl-4">
                                <div class="h-100">
                                    <div class="position-relative h-100">
                                        <div class="card h-100 overflow-hidden cursor-pointer">
                                            <div class="card-body d-flex flex-column justify-content-between position-relative">
                                                <div class="d-flex justify-content-between">
                                                    <div class="mb-5 mb-md-0 mb-lg-5 me-3">
                                                        <div class="d-sm-flex align-items-center mb-3">
                                                            <h3 class="mb-0">Standard</h3>
                                                        </div>
                                                        <p class="fs-9 text-body-tertiary">For teams that need to create <br> project plans with confidence.</p>
                                                        <div class="d-flex align-items-end mb-md-5 mb-lg-0">
                                                            <h4 class="fw-bolder me-1">$14.99</h4>
                                                            <h5 class="fs-9 fw-normal text-body-tertiary ms-1">Per month</h5>
                                                        </div>
                                                    </div><img class="d-dark-none" src="~/lib/template-phoenix/assets/img/spot-illustrations/bag-2.png" width="54" height="54" alt=""><img class="d-light-none" src="~/lib/template-phoenix/assets/img/spot-illustrations/bag-2-dark.png" width="54" height="54" alt="">
                                                </div>
                                                <div class="row flex-1 justify-content-end">
                                                    <div class="col-sm-8 col-md-12">
                                                        <div class="d-sm-flex d-md-block d-lg-flex justify-content-end align-items-end h-100">
                                                            <ul class="list-unstyled mb-0 border-start-sm border-start-md-0 border-start-lg ps-sm-5 ps-md-0 ps-lg-5 border-translucent">
                                                                <li class="d-flex align-items-center"><span class="uil uil-check-circle text-success me-2"></span><span class="text-body-tertiary fw-semibold">Up to 8 Members</span></li>
                                                                <li class="d-flex align-items-center"><span class="uil uil-check-circle text-success me-2"></span><span class="text-body-tertiary fw-semibold">Create &amp; Share libraries</span></li>
                                                                <li class="d-flex align-items-center"><span class="uil uil-check-circle text-success me-2"></span><span class="text-body-tertiary fw-semibold">10 Collaboration projects</span></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="tooltipModal" tabindex="-1" aria-labelledby="tooltipModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tooltipModalLabel">Adicionar Nova Cidade</h5><button class="btn btn-close p-1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post">
                <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="mb-0">
                            <label class="form-label" for="exampleFormControlInput">Nome da Cidade </label>
                            <input class="form-control" asp-for="@Model.Nome" type="text" />
                            <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                        </div>
                </div>
                <div class="modal-footer"><button class="btn btn-primary" type="submmit">Salvar</button><button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Cancelar</button></div>
            </form>
        </div>
    </div>
</div>